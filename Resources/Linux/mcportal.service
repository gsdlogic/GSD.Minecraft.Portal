[Unit]
Description=Minecraft Portal
After=network.target

[Service]
WorkingDirectory=/srv/mcportal/app
ExecStart=/srv/mcportal/app/GSD.Minecraft.Portal
Restart=always
RestartSec=5
User=mcportal
Group=mcportal
Environment=DOTNET_PRINT_TELEMETRY_MESSAGE=false
Environment=ASPNETCORE_URLS=http://0.0.0.0:5000

[Install]
WantedBy=multi-user.target
