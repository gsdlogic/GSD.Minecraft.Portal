<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <UserSecretsId>b8352f4f-0713-416a-940d-2aec30ea37e2</UserSecretsId>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    <DockerfileContext>..\..</DockerfileContext>
    <DockerfileRunArguments>-v "$(LocalAppData)\GSD\MinecraftPortal":/usr/share/gsd/mcportal -p 19132:19132/udp</DockerfileRunArguments>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.22.1" />
  </ItemGroup>

  <Target Name="EnsureServerDir" BeforeTargets="PreBuildEvent">
    <Exec Command="if not exist &quot;$(LocalAppData)\GSD\MinecraftPortal&quot; mkdir &quot;$(LocalAppData)\GSD\MinecraftPortal&quot;" />
  </Target>

</Project>